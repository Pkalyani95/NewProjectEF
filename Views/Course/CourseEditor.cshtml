@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model NewProjectEF.Models.CourseEditorModel

@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <form method="post"
                  asp-controller="Course"
                  asp-action="Create">

                <h2>Course Editor</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CourseTitle"></label>
                    <input class="form-control" asp-for="CourseTitle" />
                    <span asp-validation-for="CourseTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DurationInDays"></label>
                    <input class="form-control" asp-for="DurationInDays" />
                    <span asp-validation-for="DurationInDays" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsActive"></label>
                    <input class="form-control" asp-for="IsActive" />
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label>Courses</label>
                    <select class="form-control" id="CourseID" name="CourseID">
                    <option value="1">Dot Net</option>
                    <option value="2">Java</option>
                    <option value="3">AWS</option>
                    <option value="4">DevOps</option>
                    <option value="5">Software Testing</option>
                    </select>*@
                </div>
                <div style="margin-top:20px;">
                    <a href="@Url.Action("CoursesList","Course")" style="margin-right:5px;" class="btn btn-secondary">Back</a>

                    <button type="submit" class="btn btn-primary">Create Course</button>
                </div>


            </form>
        </div>
        <div class="col-6"></div>
    </div>
</div>
